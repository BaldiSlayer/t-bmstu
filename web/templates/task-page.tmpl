    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.62.0/mode/clike/clike.min.js"></script> <!-- –†–µ–∂–∏–º –¥–ª—è Kotlin -->
</head>

<body>
<div>
    <div class="avatar-container">
        <a href="/view/profile">
            <img src="https://avatars.githubusercontent.com/u/77489413?v=4" alt="User Avatar" class="user-avatar">
        </a>
    </div>

    <div id="main">
        <nav id="sidebar" class="collapsed">
            <a class="d-flex align-items-center text-decoration-none" onclick="toggleSidebar()">
                <i class="bi bi-list icons simple-text"></i>
            </a>

            <a class="d-flex align-items-center  text-decoration-none theme-toggle-container" id="theme-toggle" onclick="toggleTheme()">
                <span class="me-2 icons">
                    <i class="bi bi-moon-fill simple-text"></i>
                    <i class="bi bi-sun-fill simple-text d-none"></i>
                </span>

                <span class="sidebar-label simple-text">–ù–æ—á—å</span>
            </a>

            <div class="center-vertically">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a href="/view/home" class="d-flex align-items-center text-decoration-none">
                            <span class="me-2 icons"><i class="bi bi-house-door simple-text"></i></span>
                            <span class="sidebar-label simple-text">Home</span>
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="/view/hw_iu9_bmstu" class="d-flex align-items-center text-decoration-none">
                            <span class="me-2 icons"><i class="bi bi-code-square simple-text"></i></span>
                            <span class="sidebar-label simple-text">hw_iu9_bmstu</span>
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="/view/forum" class="d-flex align-items-center text-decoration-none">
                            <span class="me-2 icons"><i class="bi bi-chat-left-dots simple-text"></i></span>
                            <span class="sidebar-label simple-text">–§–æ—Ä—É–º</span>
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="/view/settings" class="d-flex align-items-center text-decoration-none">
                            <span class="me-2 icons"><i class="bi bi-gear simple-text"></i></span>
                            <span class="sidebar-label simple-text">–ù–∞—Å—Ç—Ä–æ–π–∫–∏</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>


        <div id="content" class="collapsed colored">
            <div class="center-container">
                <div class="rounded-box">
                    <h1 class="blue-text text-center">{{.Task.Name}}</h1>
                </div>

                <div class="problem_limits">
                    <!-- TODO –≤—Å—Ç–∞–≤–∏—Ç—å –æ–≥—Ä–∞–Ω–∏—á–µ–Ω–∏—è -->
                </div>
            </div>


            <div class="simple-text">
                {{.Condition}}
            </div>

            <h3 class="blue-text mt-2"> –§–æ—Ä–º–∞—Ç –≤–≤–æ–¥–∞ </h3>
            <div class="simple-text">
                {{.InputData}}
            </div>


            <h3 class="blue-text mt-2"> –§–æ—Ä–º–∞—Ç –≤—ã–≤–æ–¥–∞ </h3>
            <div class="simple-text">
                {{.OutputData}}
            </div>

            <h3 class="blue-text mt-2"> –ü—Ä–∏–º–µ—Ä—ã —Ç–µ—Å—Ç–æ–≤ </h3>

            <div class="test-examples">
                {{range $index, $test := .Tests}}
                <h6 class="example_h6 simple-text mt-1">–ü—Ä–∏–º–µ—Ä {{inc $index}}</h6>
                <div class="test-container">
                    <div class="test-box">
                        <div class="test-input">{{nl2br $test.Input}}</div>
                        <div class="copy-icon">üìã</div>
                    </div>
                    <div class="test-box">
                        <div class="test-output">{{nl2br $test.Output}}</div>
                        <div class="copy-icon">üìã</div>
                    </div>
                </div>
                {{end}}
            </div>


            {{if .Task.Source}}
                <h3 class="blue-text mt-2"> –ò—Å—Ç–æ—á–Ω–∏–∫ –∑–∞–¥–∞—á–∏ </h3>
                <div class="simple-text">
                    {{nl2br .Task.Source}}
                </div>
            {{end}}

            <!-- –ü–æ—Å—ã–ª–∫–∏ !-->
            <div class="mt-5">
                <div class="dropdown mt-4" style="margin-bottom: 2rem;">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Select an language
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        {{range .Languages}}
                        <li><a class="dropdown-item" onclick="selectItem('{{.}}')">{{.}}</a></li>
                        {{end}}
                    </ul>
                </div>

                <div class="coding-area">
                    <textarea id="Code" rows="10" placeholder="Enter code"></textarea>
                </div>

                <button type="submit" class="btn btn-primary mt-2 mb-2" onclick="sendRequest()">Submit</button>

                <div class="mt-3">
                    <h1 class="blue-text">–ü–æ—Å—ã–ª–∫–∏</h1>
                    <div class="table-responsive" style="overflow-x: auto;">
                        <table class="table table-stripped">
                            <thead>
                            <tr class="even">
                                <th class="even">ID</th>
                                <th class="even">–ö–æ–º–ø–∏–ª—è—Ç–æ—Ä</th>
                                <th class="even">–í–µ—Ä–¥–∏–∫—Ç</th>
                                <th class="even">–¢–µ—Å—Ç</th>
                                <th class="even">–í—Ä–µ–º—è</th>
                                <th class="even">–ü–∞–º—è—Ç—å</th>
                                <th class="even">–ö–æ–¥</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{ $rowNumber := 0 }}
                            {{range .Submissions}}
                                {{ if odd $rowNumber }}
                                <tr data-id="{{.ID}}" class="odd">
                                    {{ else }}
                                <tr data-id="{{.ID}}" class="even">
                                {{ end }}
                                <td>{{.ID}}</td>
                                    <td>{{.Language}}</td>
                                    <td>
                                        {{if eq .Verdict "Accepted"}}
                                        <span class="badge badge-success">{{.Verdict}}</span>
                                        {{else if eq .Verdict "Waiting"}}
                                        <span class="badge badge-warning">{{.Verdict}}</span>
                                        {{else if eq .Verdict "Compiling"}}
                                        <span class="badge badge-info">{{.Verdict}}</span>
                                        {{else}}
                                        <span class="badge badge-danger">{{.Verdict}}</span>
                                        {{end}}
                                    </td>
                                    <td>{{.Test}}</td>
                                    <td>{{.ExecutionTime}}</td>
                                    <td>{{.MemoryUsed}}</td>
                                    <td><a href="/view/submission/{{.ID}}">—Ç—ã–∫</a></td>
                                </tr>
                                {{ $rowNumber = inc $rowNumber }}
                            {{end}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
